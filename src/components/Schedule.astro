---
const schedule = [
  {
    date: '2025-02-16',
    day: 'Day 0',
    events: [
      {
        time: '10:00',
        title: 'Mira Networks Workshop',
        type: 'ml',
        location: 'Online',
      },
    ],
  },
  {
    date: '2025-02-21',
    day: 'Day 5',
    events: [
      {
        time: '17:00',
        title: 'SheBuilds by Bhawna Chauhan',
        type: 'dev',
        location: 'ABLT-4, IIT (BHU)',
      },
    ],
  },
  {
    date: '2025-02-22',
    day: 'Day 6',
    events: [
      {
        time: '10:00',
        title: 'Solana Workshop',
        type: 'dev',
        location: 'ABLT-4, IIT (BHU)',
      },
      {
        time: '17:30',
        title: 'Kashi CTF Begins',
        type: 'security',
        location: 'Online',
      },
    ],
  },
  {
    date: '2025-02-23',
    day: 'Day 7',
    events: [
      {
        time: '17:30',
        title: 'Kashi CTF Ends',
        type: 'security',
        location: 'Online',
      },
    ],
  },
];

const getEventColor = (type: string) => {
  const colors = {
    ml: 'text-green-400',
    dev: 'text-yellow-400',
    security: 'text-blue-400',
    ceremony: 'text-amber-100',
  };
  return colors[type as keyof typeof colors] || 'text-amber-100';
};
---

<section
  class="border-t-2 border-amber-100/30 px-4 py-20 md:px-0"
  id="schedule"
>
  <div class="mb-16 text-center font-mono">
    <p class="text-amber-100/70">$ cat schedule.txt</p>
    <h2 class="mt-2 text-4xl text-amber-100">[ TIMELINE ]</h2>
  </div>

  <div class="mx-auto max-w-4xl border-l-2 border-amber-100/30 bg-black/80 p-8">
    {
      schedule.map((day) => (
        <div class="mb-5">
          <div class="mb-3 flex items-center gap-4">
            <div class="border-l-2 border-amber-100/30 bg-black/30 p-2">
              <span class="text-amber-100">{day.day}</span>
            </div>
            <h3 class="font-mono text-xl text-amber-100/70">
              {new Date(day.date).toLocaleDateString('en-US', {
                month: 'long',
                day: 'numeric',
                year: 'numeric',
              })}
            </h3>
          </div>
          <div class="border-l border-amber-100/20 pl-6">
            {day.events.map((event) => (
              <div class="mb-4 flex items-start gap-6 pt-1">
                <span class="w-16 font-mono text-amber-100/50">
                  {event.time}
                </span>
                <span class={`font-mono ${getEventColor(event.type)}`}>
                  {event.title} {event.location && `@ ${event.location}`}
                </span>
              </div>
            ))}
          </div>
        </div>
      ))
    }
  </div>

  <div class="mx-auto mt-8 max-w-4xl font-mono text-sm">
    <div class="flex justify-center gap-8">
      <div class="flex items-center gap-2">
        <span class="h-3 w-3 rounded-full bg-green-400"></span>
        <span class="text-amber-100/70">IG</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="h-3 w-3 rounded-full bg-yellow-400"></span>
        <span class="text-amber-100/70">SDG</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="h-3 w-3 rounded-full bg-blue-400"></span>
        <span class="text-amber-100/70">Infosec</span>
      </div>
    </div>
  </div>
</section>
