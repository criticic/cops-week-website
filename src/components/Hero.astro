---
import Terminal from './Terminal.astro';
---

<section class="flex flex-col gap-10 px-4 py-10 md:flex-row md:px-0 items-start">
  <!-- Left Content -->
  <div class="flex flex-col items-start justify-start gap-6 md:w-1/2">
    <h1 class="font-mono text-amber-100">
      Club Of ProgrammerS, IIT (BHU) Varanasi presents
    </h1>
    <div class="font-mono">
      <p class="text-4xl text-amber-100">$ COPS Week 2025</p>
      <p class="mt-2 text-lg text-amber-100/70">
        gcc -Wall -O2 -o future *.c<br />
        linking...<br />
        spawning threads...<br />
      </p>
    </div>
    <div
      class="border-l-2 border-amber-100/30 bg-black/30 p-4 font-mono text-amber-100/80"
    >
      <p>// a week of building cool stuff</p>
      <p class="mt-2" is:raw>const events = {</p>
      <p class="ml-4">ml: 'Machine Learning',</p>
      <p class="ml-4">dev: 'Software Development',</p>
      <p class="ml-4">cybersec: 'Cybersecurity'</p>
      <p class="ml-4">cp: 'Competitive Programming'</p>
      <p is:raw>};</p>
    </div>
    <div class="flex w-full flex-col gap-4 font-mono mt-8">
      <div class="flex flex-col gap-2 sm:flex-row">
        <a
          href="https://unstop.com/college-fests/cops-week-2025-indian-institute-of-technology-banaras-hindu-university-330074"
          class="bg-amber-100/10 px-4 py-2 text-center text-amber-100 transition-colors hover:bg-amber-100/20"
        >
          ./register.sh
        </a>
        <a
          href="#schedule"
          class="bg-amber-100/10 px-4 py-2 text-center text-nowrap text-amber-100 transition-colors hover:bg-amber-100/20"
        >
          cat schedule.txt
        </a>
        <a
          href="https://discord.gg/SFPasJjaYQ"
          class="bg-amber-100/10 px-4 py-2 text-center text-nowrap text-amber-100 transition-colors hover:bg-amber-100/20"
        >
          cd discord
        </a>
      </div>
    </div>
  </div>

  <!-- Terminal Section -->
  <Terminal />
</section>
