---
import Terminal from './Terminal.astro';
---

<section class="py-20 flex flex-col md:flex-row px-4 md:px-0 gap-10">
  <!-- Left Content -->
  <div class="flex flex-col gap-6 justify-start items-start md:w-1/2">
    <h1 class="text-amber-100 font-mono">
      Club of Programmers, IIT (BHU) Varanasi presents
    </h1>
    <div class="font-mono">
      <p class="text-4xl text-amber-100">$ COPS Week 2025</p>
      <p class="text-lg text-amber-100/70 mt-2">
        gcc -Wall -O2 -o future *.c<br />
        linking...<br />
        spawning threads...<br />
      </p>
    </div>
    <div
      class="font-mono text-amber-100/80 bg-black/30 p-4 border-l-2 border-amber-100/30"
    >
      <p>// a week of building cool stuff</p>
      <p class="mt-2" is:raw>const events = {</p>
      <p class="ml-4">ml: 'Machine Learning',</p>
      <p class="ml-4">dev: 'Software Development',</p>
      <p class="ml-4">cybersec: 'Cybersecurity'</p>
      <p is:raw>};</p>
    </div>
    <div class="flex gap-4 font-mono">
      <a
        href="#register"
        class="bg-amber-100/10 px-5 py-3 text-amber-100 hover:bg-amber-100/20 transition-colors"
      >
        ./register.sh
      </a>
      <a
        href="#schedule"
        class="bg-amber-100/10 px-5 py-3 text-amber-100 hover:bg-amber-100/20 transition-colors"
      >
        cat schedule.txt
      </a>
    </div>
  </div>

  <!-- Terminal Section -->
  <Terminal />
</section>
