---
import { Icon } from 'astro-icon/components';

const sponsorTiers = [
  {
    name: 'PLATINUM',
    icon: 'lucide:gem',
    color: 'amber',
    borderColor: 'border-amber-400',
    textColor: 'text-amber-400',
    hoverBg: 'hover:bg-amber-400/10',
    sponsors: [
      {
        name: 'Mira Networks',
        logo: '/mira.png',
        url: 'https://mira.network/',
      },
      {
        name: 'Codecrafters',
        logo: '/codecrafters.png',
        url: 'https://codecrafters.io/',
      },
      {
        name: 'APISec University',
        logo: '/APISec_University.png',
        url: 'https://www.apisecuniversity.com/',
      },
    ],
  },
  {
    name: 'GOLD',
    icon: 'lucide:award',
    color: 'yellow',
    borderColor: 'border-yellow-400',
    textColor: 'text-yellow-400',
    hoverBg: 'hover:bg-yellow-400/10',
    sponsors: [],
  },
  {
    name: 'SILVER',
    icon: 'lucide:medal',
    color: 'blue',
    borderColor: 'border-blue-400',
    textColor: 'text-blue-400',
    hoverBg: 'hover:bg-blue-400/10',
    sponsors: [
      {
        name: 'gen.xyz',
        logo: '/xyz-logo-white.png',
        url: 'https://gen.xyz/',
      },
      {
        name: 'Burp Bounty',
        logo: '/burp_bounty.png',
        url: 'https://burpbounty.net/',
      },
      {
        name: 'Altered Security',
        logo: '/altered_security.png',
        url: 'https://alteredsecurity.com/',
      },
    ],
  },
  {
    name: 'BRONZE',
    icon: 'lucide:shield',
    color: 'orange',
    borderColor: 'border-orange-400',
    textColor: 'text-orange-400',
    hoverBg: 'hover:bg-orange-400/10',
    sponsors: [
      {
        name: 'Lets Defend',
        logo: '/lets-defend.png',
        url: 'https://letsdefend.io/',
      },
    ],
  },
  {
    name: 'OTHER',
    icon: 'lucide:shield',
    color: 'orange',
    borderColor: 'border-orange-400',
    textColor: 'text-orange-400',
    hoverBg: 'hover:bg-orange-400/10',
    sponsors: [
      {
        name: 'Give My Certificate',
        logo: '/gmc.png',
        url: 'https://givemycertificate.com/',
      },
      {
        name: 'Balasmiq',
        logo: '/balsamiq.png',
        url: 'https://balsamiq.com/',
      },
    ],
  },
];
---

<section
  class="flex flex-col items-center gap-16 border-t-2 border-amber-100/30 px-4 py-20 md:px-0"
  id="sponsors"
>
  <div class="text-center font-mono">
    <p class="text-amber-100/70">$ cat sponsors.txt</p>
    <h2 class="mt-2 text-4xl text-amber-100">[ SPONSORS ]</h2>
  </div>

  <div class="w-full max-w-2xl border-l-2 border-amber-100/30 bg-black/80 p-8">
    <h3 class="mb-4 font-mono text-2xl text-amber-100">// JOIN_THE_NETWORK</h3>
    <p class="mb-6 font-mono text-amber-100/70" is:raw>
      const mission = {<br/> &nbsp;&nbsp;type: "support_next_gen_talent",<br/>
      &nbsp;&nbsp;event: "COPS_WEEK_2025",<br/> &nbsp;&nbsp;status:
      "seeking_allies"<br/> };
    </p>
    <a
      href="/sponsor-brochure.pdf"
      class="inline-block bg-amber-100/10 px-3 py-3 font-mono text-sm text-amber-100 transition-colors hover:bg-amber-100/20"
    >
      ./download_sponsorship_brochure.sh
    </a>
  </div>

  <div class="w-full">
    {
      sponsorTiers.map((tier) => (
        <div class="mb-16">
          <div class="mb-8 flex items-center gap-4">
            <div class="border-l-2 border-amber-100/30 bg-black/30 p-3">
              <Icon name={tier.icon} />
            </div>
            <h3 class="font-mono text-2xl text-amber-100">
              $ {tier.name}_ALLIES
            </h3>
          </div>
          <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            {tier.sponsors.map((sponsor) => (
              <a
                href={sponsor.url}
                class="group flex flex-col items-center justify-center gap-4 border-l-2 border-amber-100/80 bg-black/80 p-6 transition-all duration-300 hover:bg-amber-100/80"
              >
                <img
                  src={sponsor.logo}
                  alt={`${sponsor.name} logo`}
                  class="h-auto max-h-16 max-w-full opacity-80 transition-all group-hover:opacity-100"
                />
                <div class="mt-2 text-center font-mono text-xs text-amber-100/70">
                  <p class="mb-1">$ {sponsor.name}</p>
                </div>
              </a>
            ))}
            {tier.sponsors.length === 0 && (
              <div class="col-span-3 border-l-2 border-amber-100/30 bg-black/30 p-6 text-center">
                <p class="font-mono text-amber-100/70">[ SLOTS_AVAILABLE ]</p>
              </div>
            )}
          </div>
        </div>
      ))
    }
  </div>
</section>
