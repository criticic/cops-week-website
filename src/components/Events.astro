---
const events = [
  {
    title: 'Ctrl Shift Intelligence',
    category: 'Machine Learning',
    icon: 'lucide:brain',
    description:
      'A weeklong international ML hackathon covering computer vision, NLP, RL, and data science.',
    organizer: 'COPS IG',
    bgColor: 'bg-ppink',
    url: 'https://unstop.com/hackathons/ctrl-shift-intelligence-cops-week-2025-iit-bhu-1400729',
  },
  {
    title: 'DebugIt',
    category: 'Software Development',
    icon: 'lucide:code',
    description:
      'A weeklong international software development hackathon for all skill levels.',
    organizer: 'COPS SDG',
    bgColor: 'bg-pgreen',
    url: 'https://unstop.com/hackathons/debugit-software-development-challenge-cops-week-2025-iit-bhu-1400712',
  },
  {
    title: 'Kashi CTF',
    category: 'Cybersecurity',
    icon: 'lucide:shield',
    description:
      '24-hour international CTF with beginner-friendly to advanced challenges.',
    organizer: 'COPS CyberSec',
    bgColor: 'bg-pblue',
    url: 'https://unstop.com/hackathons/kashi-ctf-2025-capture-the-flag-cops-week-2025-iit-bhu-1400421',
  },
  {
    title: 'NP Compete',
    category: 'Competitive Programming',
    icon: 'lucid:sword',
    description:
      'A 36-hour competitive programming contest exclusively for IIT (BHU) freshers.',
    organizer: 'COPS CPG',
    bgColor: 'bg-pred',
    url: '',
  },
];
---

<section
  class="flex flex-col gap-4 border-t-2 border-amber-100/30 py-20"
  id="events"
>
  <div class="text-center font-mono">
    <p class="text-amber-100/70">$ cat events.txt</p>
    <h2 class="mt-2 text-4xl text-amber-100">[ EVENTS ]</h2>
  </div>
  <ul class="grid gap-8 px-4 py-20 md:grid-cols-2 md:px-0">
    {
      events.map((event) => (
        <li class="border-2 border-amber-100/50 bg-black/30 p-6 transition-all duration-300 hover:bg-amber-100/20">
          <div class="flex flex-col gap-4">
            <div class="font-mono text-lg text-amber-100">
              &gt; {event.title}
            </div>
            <p class="border-l-2 border-amber-100/30 pl-2 font-mono text-sm text-amber-100/70">
              {event.category}
            </p>
          </div>
          <p class="mt-4 font-mono text-sm text-amber-100/80">
            {event.description}
          </p>
          <div class="mt-4 flex items-center justify-between">
            <p class="text-xs text-amber-100/60">
              Organized By: {event.organizer}
            </p>
            {event.url && (
              <a
                href={event.url}
                class="bg-amber-100/10 px-3 py-2 font-mono text-sm text-amber-100 transition-colors hover:bg-amber-100/20"
              >
                ./register.sh
              </a>
            )}
          </div>
        </li>
      ))
    }
  </ul>
</section>
