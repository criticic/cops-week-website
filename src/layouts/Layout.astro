---
import BaseHead from '@/components/BaseHead.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import { SITE_CONFIG } from '@/data/config';
import '@fontsource/space-mono';
---

<!doctype html>
<html lang="en" class="bg-[#0a0a0f]">
  <head>
    <BaseHead title={SITE_CONFIG.title} description={SITE_CONFIG.description} />
  </head>
  <body class="cyber-grid m-0 max-w-screen bg-[#0a0a0f] p-0 text-[#00ff00]">
    <div class="grid-borders"></div>
    <Header />
    <main class="container mx-auto md:px-10">
      <slot />
    </main>
    <Footer />
  </body>
</html>
